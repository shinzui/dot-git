[alias]
  amend = commit --amend -C HEAD
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --stat --ignore-space-at-eol --abbrev-commit --relative-date --format=medium
  ls-ignored = ls-files --exclude-standard --ignored --others
  who = shortlog -s --
  spull = svn rebase
  spush = svn dcommit
  sfetch = svn fetch
  review= log -p --max-count=1
